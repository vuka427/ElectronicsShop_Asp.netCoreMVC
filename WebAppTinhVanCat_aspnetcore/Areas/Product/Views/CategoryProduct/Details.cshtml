@model WebAppTinhVanCat_aspnetcore.Models.Product.CategoryProduct

@{
    ViewData["Title"] = Model.Title;
  
}


<div>
    <hr />
    <dl class="row">
     
        <dt class = "col-sm-2">
            Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Content)
        </dd>
        <dt class = "col-sm-2">
           Url
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
     
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Sữa</a> |
    <a asp-action="Index">Trở lại danh mục sản phẩm</a>
</div>
@{
    _AdminSideBarService.SetActive("CategoryProduct", "Index", "Product");
}
@section Sidebar {
    @Html.Raw(_AdminSideBarService.renderHtml())
}