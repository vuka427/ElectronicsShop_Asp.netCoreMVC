@model TradeMarkModel

@{
    ViewData["Title"] = "Xóa thương hiệu";
}



<div>
    <h4>Bạn có chắc muốn xóa thương hiệu @Html.DisplayFor(model => model.Name)</h4>
    <h4>Không thể khôi phục thương hiệu đã xóa ! </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở lại danh sách thương hiệu</a>
    </form>
</div>
@{
    _AdminSideBarService.SetActive("TradeMark", "Index", "Product");
}
@section Sidebar {
    @Html.Raw(_AdminSideBarService.renderHtml())
}