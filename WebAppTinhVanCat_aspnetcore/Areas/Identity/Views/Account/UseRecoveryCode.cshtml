@model UseRecoveryCodeViewModel
@{
    ViewData["Title"] = "Sử dụng mã phục hồi";
    Layout = "_LoginLayout";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">

                    <div class="col-lg-8">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h2 text-gray-900 mb-4">Nhập mã khôi phục</h1>
                            </div>
                            <form class="user form-horizontal" asp-controller="Account" asp-action="UseRecoveryCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"  role="form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="form-group">
                                    <input asp-for="Code" class="form-control form-control-user" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn btn-primary btn-user btn-block  font-weight-bold">Gửi</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
