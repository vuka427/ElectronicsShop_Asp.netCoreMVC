@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_LoginLayout";
}



<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">

                    <div class="col-lg-8">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h2 text-gray-900 mb-4">Thực hiện liên kết với tài khoản @ViewData["ProviderDisplayName"].</h1>
                                <p class="text-info">
                                    Bạn đã xác thực liên kết với <strong>@ViewData["ProviderDisplayName"]</strong>.
                                    Hãy nhập địa chỉ email để liên kết hoặc tạo tài khoản.
                                </p>
                            </div>
                            <form class="user form-horizontal" asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                               
                                <button type="submit" class="btn btn btn-primary btn-user btn-block  font-weight-bold">Đăng ký</button>

                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
