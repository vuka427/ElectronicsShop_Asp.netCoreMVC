@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_LoginLayout";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">
                  
                    <div class="col-lg-8">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h2 text-gray-900 mb-4">Đăng nhập</h1>
                            </div>
                            <form class="user form-horizontal" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"  role="form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="UserNameOrEmail" class="form-control form-control-user">
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                </div>
                               
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-user" >
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                               
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck">
                                        <label asp-for="RememberMe" class="custom-control-label" for="customCheck">
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block  font-weight-bold">Đăng nhập</button>
                            </form>
                                <hr>

                                 @{
                                    var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
                                    var loginProviders = schemes.ToList();
                                    if (loginProviders.Count != 0)
                                    {
                                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="user form-horizontal" role="form">
                                            @foreach (var provider in loginProviders)
                                            {
                                                if (provider.Name == "OpenIdConnect") continue;
                                                var css = "btn btn-user btn-primary btn-block";
                                                var icon = "";
                                                if (provider.Name == "Google")
                                                {
                                                    css = "btn btn-google btn-user btn-block";
                                                    icon = "<i class= \"fab fa-google fa-fw \"></i>";
                                                }
                                                else
                                                {
                                                    if (provider.Name == "Facebook")
                                                    {
                                                        css = "btn btn-facebook btn-user btn-block";
                                                        icon = "<i class= \"fab fa-facebook-f fa-fw \"></i>";
                                                    }
                                                    else
                                                    {
                                                        if(provider.Name == "Microsoft")
                                                        {
                                                            css = "btn btn-primary btn-user btn-block";
                                                        icon = "<i class=\"fab fa-windows\"></i>";
                                                        }
                                                    }
                                                }
                                                <button type="submit" class="@css" name="provider" value="@provider.Name" title="Đăng nhập với @provider.Name account"> @Html.Raw(icon) @provider.Name</button>
                                            }
                                    </form>
                                    }                                
                                }
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="ForgotPassword">Quên mật khẩu?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Chưa có tài khoản? Đăng ký tại đây !</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
