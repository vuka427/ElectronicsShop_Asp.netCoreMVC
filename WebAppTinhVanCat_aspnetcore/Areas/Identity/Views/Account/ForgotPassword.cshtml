@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_LoginLayout";
}

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">
                  
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Bạn quên mật khẩu?</h1>
                                <p class="mb-4">
                                    Vui lòng nhập địa chỉ Email của tài khoản để lấy lại mật khẩu. Chúng tôi sẻ gửi cho bạn liên kết để đặt lại mật khẩu.
                                </p>
                            </div>
                            <form class="user " method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for ="Email" class="form-control form-control-user">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block font-weight-bold">Gửi</button>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Chưa có tài khoản? Đăng ký tại đây !</a>
                            </div>
                            <div class=" text-center">
                                <a class="small" asp-action="Login">Đã có tài khoản? Đăng nhập tại đây!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
