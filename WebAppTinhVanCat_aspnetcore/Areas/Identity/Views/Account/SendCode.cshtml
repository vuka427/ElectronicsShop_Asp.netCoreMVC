@model SendCodeViewModel
@{
    ViewData["Title"] = "Gửi mã xác thực";
    Layout = "_LoginLayout";
}



<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">

                    <div class="col-lg-8">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h2 text-gray-900 mb-4">Mã xác thực gửi tới</h1>
                            </div>
                            <form class="user form-horizontal" method="post" asp-controller="Account" asp-action="SendCode" asp-route-returnurl="@Model.ReturnUrl" role="form">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <select asp-for="SelectedProvider" asp-items="Model.Providers" class="form-control "></select>
                                    <span asp-validation-for="SelectedProvider" ></span>
                                </div>
                                
                                <button type="submit" class="btn btn btn-primary btn-user btn-block  font-weight-bold">Gửi</button>

                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
