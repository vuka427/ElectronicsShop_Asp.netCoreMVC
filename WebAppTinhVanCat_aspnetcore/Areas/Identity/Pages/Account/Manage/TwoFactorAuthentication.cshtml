@page "/2Fa/"
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Xác thực 2 yếu tố (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage"/>

<h4>@ViewData["Title"]</h4>

@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            <strong>Bạn không còn mã khôi phục nào.</strong>
            <p>Bạn có thể <a asp-page="./GenerateRecoveryCodes">tạo bộ mã khôi phục mới</a> trước khi bạn có thể đăng nhập bằng mã khôi phục.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            <strong>Bạn có một mã khôi phục.</strong>
            <p>Bạn có thể <a asp-page="./GenerateRecoveryCodes">tạo bộ mã khôi phục mới</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            <strong>Bạn có @Model.RecoveryCodesLeft mã khôi phục.</strong>
            <p>Bạn nên <a asp-page="./GenerateRecoveryCodes">tạo bộ mã khôi phục mới</a>.</p>
        </div>
    }else
    { 
        <div class="alert alert-success">
            <strong>Bạn còn @Model.RecoveryCodesLeft mã khôi phục chưa sử dụng.</strong>
        </div>
        
    }
    

    if (Model.IsMachineRemembered)
    {
        <form method="post" style="display: inline-block">
            <button type="submit" class="btn btn-default">Quên trình duyệt này </button>
        </form>
    }
    <a asp-page="./Disable2fa" class="btn btn-default">Vô hiệu hóa 2FA</a>
    <a asp-page="./GenerateRecoveryCodes" class="btn btn-default">Đặt lại mã khôi phục</a>
}

<h5>Ứng dụng xác thực</h5>

@if (!Model.HasAuthenticator)
{
    <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-default">Thêm ứng dụng xác thực</a>
}
else
{
    <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-default">Cài đặt ứng dụng xác thực</a>
    <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-default"> Đặt lại ứng dụng xác thực</a>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}