@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using WebAppTinhVanCat_aspnetcore.Areas.Product.Models;
@using WebAppTinhVanCat_aspnetcore.Areas.Product.Service;
@inject IHttpContextAccessor HttpContextAccessor;
@inject CartService _CartService;

@{

    var cart = _CartService.GetCartItems();
    if(cart.Count>0)
    {
        <div class="nav-item "><a class="text-danger" asp-route="cart"><i class="fa-solid fa-basket-shopping header_navbar-cart-icon"></i>(@cart.Count)</a></div>
         
    }
}