@using Microsoft.AspNetCore.Identity
@using WebAppTinhVanCat_aspnetcore.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm"  class="navbar-right">
        <ul class="nav navbar-nav navbar-right nav-login">
            <li class="nav-item">
                <a class="nav-link text-warning" asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage"><i class="fas fa-user fa-1x"></i> @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button title="Đăng xuất"  type="submit" class="btn btn-link navbar-btn navbar-link text-danger"><i class="fas fa-sign-out-alt text-danger" ></i></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a title="Đăng ký" class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Register"><i class="fas fa-user-edit text-danger"></i></a>
        </li>
        <li class="nav-item">
            <a title="Đăng nhập" class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt text-danger"></i></a>
        </li>
    </ul>
}